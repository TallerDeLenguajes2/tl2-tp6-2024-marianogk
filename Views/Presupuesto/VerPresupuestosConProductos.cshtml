@model Presupuesto

@{
    ViewData["Title"] = "Ver Productos en el Presupuesto";
}

<h1>@ViewData["Title"]</h1>

<h3>Presupuesto de @Model.NombreDestinatario</h3>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalles)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Producto.Precio</td>
                <td>@(detalle.Cantidad * detalle.Producto.Precio)</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Presupuesto")" class="btn btn-secondary">Volver</a>
